             },
             {
                "in":"body",
                "name":"corpses",
                "description":"New corpses value",
                "required":true,
                "example":8
             }
          ],
          "responses":{
            "200":{
              "description":"Success"
            },
            "500":{
              "description":"Failure"
            }
