                  "required":true,
                  "example":"samjust"
               },
               {
                  "in":"body",
                  "name":"nickname",
                  "description":"Users nickname",
                  "required":true,
                  "example":"Samjust228"
               }
            ],
            "responses":{
               "201":{
                  "description":"New user registrated",
                  "schema":{
                      "type":"object",
                      "properties":
                        {
                            "nickname":{
                                "type":"string",
                                "description": "User's nickname",
                                "example":"Samjust228"
                            },
                            "resources": {
                              "type":"json",
                              "description":"User's resources",
                              "example":{
                                "energy": 228,
                                "brains": 5,
                                "heartMuscles": 1,
                                "livers": 3,
                                "corpses": 2
                              }
                            },
                            "skeletons":{
                              "type": "array",
                              "description":"User's known formulas",
                              "example":[
                                  {
                                      "type": "rat",
                                      "integrety": [
                                          0.5,
                                          0.7,
                                          1
                                      ]
                                  },
                                  {
                                      "type": "bat",
                                      "integrety": [
                                          0.1,
                                          0.2,
                                          1
                                      ]
                                  }
                              ]
                            },
                            "knownFormulas":{
                              "type":"array",
                              "description":"User's known formulas",
                              "example": [
                                  {
                                      "_id": "5b0ec75cdb224e66fe55ef66",
                                      "date": 0
                                  },
                                  {
                                      "_id": "5b0ec75cdb224e66fe55ef64",
                                      "date": 1
                                  }
                              ]
                            },
                            "army":{
                              "type":"array",
                              "description":"User's army",
                              "example": []
                            },
                            "lastLocation":{
                              "type":"string",
                              "description":"User's last location",
                              "example": "/"
                            }
                        }
                      }
               },
               "409":{
                 "description":"Email is taken"
               }
            }
         }
      },
