{
   "swagger":"2.0",
   "info":{
      "description":"Zombie game API"
   },
   "host":"localhost:3001",
   "basePath":"/",
   "tags":[],
   "schemes":[],
   "paths":{
      "/login":{
         "post":{
            "tags":[
               "User"
            ],
            "summary":"Login user",
            "description":"",
            "consumes":[
               "application/json"
            ],
            "produces":[
               "application/json"
            ],
            "parameters":[
               {
                  "in":"body",
                  "name":"email",
                  "description":"Users email",
                  "required":true,
                  "example":"samjust@samjust.com"
               },
               {
                  "in":"body",
                  "name":"password",
                  "description":"Users password",
                  "required":true,
                  "example":"samjust"
               }
            ],
            "responses":{
               "200":{
                  "description":"Success",
                  "schema":{
                      "type":"object",
                      "properties":
                        {
                            "nickname":{
                                "type":"string",
                                "description": "User's nickname",
                                "example":"Samjust228"
                            },
                            "resources": {
                              "type":"json",
                              "description":"User's resources",
                              "example":{
                                "energy": 228,
                                "brains": 5,
                                "heartMuscles": 1,
                                "livers": 3,
                                "corpses": 2
                              }
                            },
                            "skeletons":{
                              "type": "array",
                              "description":"User's known formulas",
                              "example":[
                                  {
                                      "type": "rat",
                                      "integrety": [
                                          0.5,
                                          0.7,
                                          1
                                      ]
                                  },
                                  {
                                      "type": "bat",
                                      "integrety": [
                                          0.1,
                                          0.2,
                                          1
                                      ]
                                  }
                              ]
                            },
                            "knownFormulas":{
                              "type":"array",
                              "description":"User's known formulas",
                              "example": [
                                  {
                                      "_id": "5b0ec75cdb224e66fe55ef66",
                                      "date": 0
                                  },
                                  {
                                      "_id": "5b0ec75cdb224e66fe55ef64",
                                      "date": 1
                                  }
                              ]
                            },
                            "army":{
                              "type":"array",
                              "description":"User's army",
                              "example": []
                            },
                            "lastLocation":{
                              "type":"string",
                              "description":"User's last location",
                              "example": "/"
                            }
                        }
                      }
                  },
                  "404":{
                    "description":"Failure. Server was unable to find matching email/pass pair in database."
                  }
               }
            }
      },
      "/registration":{
